{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "storybook-static",
    "coverage",
    "jest.config.js",
    "**/*.test.tsx",
    "**/*.stories.mdx",
    "**/*.stories.@(js|jsx|ts|tsx)"
  ]
}
